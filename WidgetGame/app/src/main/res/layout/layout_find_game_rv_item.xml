<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vertical_1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/find_game_list_image_iv"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/vertical_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/find_game_list_title_tv"
                android:textSize="@dimen/text_size5"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_1"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/horizontal_1_ifx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/find_game_list_maker_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_marginLeft="@dimen/horizontal_1_ifx"
                    android:id="@+id/find_game_list_nickname_tv"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/find_game_list_stars_tv"
                    android:layout_width="@dimen/vertical_4"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/text_size2"
                    android:layout_weight="0"
                    android:layout_margin="@dimen/vertical_1" />
            </LinearLayout>

            <TextView
                android:id="@+id/find_game_list_description_tv"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>