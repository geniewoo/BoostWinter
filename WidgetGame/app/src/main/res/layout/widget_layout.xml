<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:id="@+id/widget_no_game_lo"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="게임이 없습니다"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/widget_play_lo"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:visibility="gone">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <Button android:id="@+id/widget_flipper_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FlipperBtn1"/>
        </LinearLayout>
        <ViewFlipper
            android:id="@+id/widget_flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content">
                    <ImageView android:layout_width="match_parent"
                               android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:text="테스트중입니다"/>
                </FrameLayout>
                <FrameLayout android:id="@+id/widget_playing_game_no_selections_lo"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="넘어가기"/>
                </FrameLayout>
                <LinearLayout android:id="@+id/widget_playing_game_selections_lo"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <Button android:id="@+id/widget_playing_game_selection1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="테스트중입니다"/>
                    <Button android:id="@+id/widget_playing_game_selection2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="테스트중입니다"/>
                    <Button android:id="@+id/widget_playing_game_selection3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="테스트중입니다"/>
                    <Button android:id="@+id/widget_playing_game_selection4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="테스트중입니다"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게임시작하기"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다른게임하기"/>
            </LinearLayout>
        </ViewFlipper>
    </LinearLayout>
</LinearLayout>