<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_make_game_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sungwoo.boostcamp.widgetgame.MakeGame.MakeGameInfoActivity">
    <EditText
        android:id="@+id/make_game_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="게임 이름"/>
    <EditText
        android:id="@+id/make_game_description_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="180dp"
        android:hint="게임 설명"/>
    <FrameLayout
        android:id="@+id/make_game_image_fl"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/make_game_image_tx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="게임 대표 이미지"/>
        <ImageView
            android:id="@+id/make_game_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <Button
        android:id="@+id/make_game_start_btn"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:text="제작시작하기"/>
</LinearLayout>
