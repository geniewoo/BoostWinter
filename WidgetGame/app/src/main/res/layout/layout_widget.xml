<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/widget_no_game_lo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="게임이 없습니다" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="게임다운로드 하러가기"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_play_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/widget_flipper_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FlipperBtn1" />
        </LinearLayout>

        <ViewFlipper
            android:id="@+id/widget_flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/widget_image_iv"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                    <TextView
                        android:id="@+id/widget_image_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:text="테스트중입니다" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/widget_game_info_lo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/widget_game_info_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/widget_game_info_description_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/widget_game_info_maker_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/widget_game_info_email_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/widget_game_info_start_game_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="게임 시작"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/widget_playing_game_no_selections_lo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="다음페이지로" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/widget_playing_game_selections_lo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/widget_playing_game_selection1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="테스트중입니다" />

                    <Button
                        android:id="@+id/widget_playing_game_selection2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="테스트중입니다" />

                    <Button
                        android:id="@+id/widget_playing_game_selection3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="테스트중입니다" />

                    <Button
                        android:id="@+id/widget_playing_game_selection4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="테스트중입니다" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게임시작하기" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다른게임하기" />
            </LinearLayout>
        </ViewFlipper>
    </LinearLayout>
</LinearLayout>