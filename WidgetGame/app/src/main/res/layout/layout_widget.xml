                                    android:baselineAligned="false">

                                    <ViewFlipper
                                        android:id="@+id/widget_game2_selection3_vf"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/vertical_5"
                                        android:layout_marginRight="2dp"
