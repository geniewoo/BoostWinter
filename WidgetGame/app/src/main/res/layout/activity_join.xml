<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sungwoo.boostcamp.widgetgame.JoinActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/JOIN_EMAIL"/>
        <TextView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/JOIN_SECTIONBAR"/>
        <EditText
            android:id="@+id/join_email_et"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLength="@integer/LENGTH_EMAIL"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/JOIN_PASSWORD"/>
        <TextView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/JOIN_SECTIONBAR"/>
        <EditText
            android:id="@+id/join_password_et"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPassword"
            android:maxLength="@integer/LENGTH_PASSWORD"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/JOIN_NICKNAME"/>
        <TextView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/JOIN_SECTIONBAR"/>
        <EditText
            android:id="@+id/join_nickname_et"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="@integer/LENGTH_NICKNAME"/>
    </LinearLayout>
    <Button
        android:id="@+id/join_join_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/vertical_margin2"
        android:layout_marginRight="@dimen/vertical_margin2"
        android:text="@string/JOIN_JOIN"/>
</LinearLayout>
